<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <%= render friend %>
        <td>
          <%= link_to "Show this friend", friend %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary"  %>
